<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_50"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <include layout="@layout/form_normal_title" />

    <TextView
        android:id="@+id/form_item_check"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:drawableEnd="@drawable/form_drawable_right"
        android:drawableRight="@drawable/form_drawable_right"
        android:ellipsize="end"
        android:gravity="center_vertical|end"
        android:maxLines="1"
        android:paddingLeft="@dimen/dp_100"
        android:paddingStart="@dimen/dp_100" />

</LinearLayout>
